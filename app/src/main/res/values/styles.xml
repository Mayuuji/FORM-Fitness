<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Rounded green Material button -->
    <style name="Widget.FormButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brand_green</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Helper style to make a VideoView full‑screen -->
    <style name="VideoViewWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Curls setup text styles -->
    <style name="activity_re">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="rep_count">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- Big numeric score -->
    <style name="ScoreText">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Small rating message -->
    <style name="RatingText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="curls">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="push_up_tot">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="average_sta">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>    <style name="CompletedMessage">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">#000000</item>
</style>

    <style name="CompletedScore">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Smaller 72 sp number used in Stats cards -->
    <style name="StatsNumber">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
