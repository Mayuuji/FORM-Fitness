<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.view.TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/testImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/switchCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Camera"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textViewRepCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reps: 0"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@android:color/black"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewHandPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please position your hands wider than your shoulders"
        android:textSize="18sp"
        android:textColor="#FF4444"
        android:background="@android:color/black"
        android:padding="6dp"
        android:visibility="gone"
        android:layout_below="@id/textViewRepCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewDepthWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Squat not deep enough. Adjust downThreshold to fine‑tune."
        android:textSize="18sp"
        android:textColor="#FF4444"
        android:background="@android:color/black"
        android:padding="6dp"
        android:visibility="gone"
        android:layout_below="@id/textViewHandPosition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewHandZPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form mis‑alignment on Z‑axis"
        android:textSize="18sp"
        android:textColor="#FF4444"
        android:background="@android:color/black"
        android:padding="6dp"
        android:visibility="gone"
        android:layout_below="@id/textViewDepthWarning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
